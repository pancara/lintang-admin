<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
          {{#if error}}
              <div class="alert alert-danger" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}

          {{#if success}}
              <div class="alert alert-success" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}

          {{#if (and error success)}}
              <div class="alert alert-info" role="alert">
                  Set operator status
              </div>
          {{/if}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-1"><span class="field">Code</span></div>
        <div class="col-lg-2">
          {{operator.code}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1"><span class="field">Name</span></div>
        <div class="col-lg-2">
          {{operator.name}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-1"><span class="field">Status</span></div>
        <div class="col-lg-2">
            <select class="form-control" onchange={{action "selectStatus" value="target.value"}}>
              {{#each statusOptions as |statusOption|}}
                  <option value={{statusOption}} selected={{eq status statusOption}}>{{statusOption}}</option>
              {{/each}}
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9 col-lg-offset-1">
            <button class="btn btn-success btn-sm" {{action "save"}}>
              {{fa-icon "check"}} &nbsp; Save
            </button>
            <button class="btn btn-danger btn-sm" {{action "cancel"}}>
              {{fa-icon "remove"}} &nbsp; Cancel
            </button>
        </div>
    </div>
</div>

