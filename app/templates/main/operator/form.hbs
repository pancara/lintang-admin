<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
          {{#if error}}
              <div class="alert alert-danger" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}

          {{#if success}}
              <div class="alert alert-success" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Code</span>
        </div>
        <div class="col-lg-2">
            <span class="value">- Auto -</span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Name</span></div>
        <div class="col-lg-5">
          {{input class="form-control" value=name}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Description</span>
        </div>
        <div class="col-lg-5">
          {{textarea class="form-control" value=description}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Contact Name</span>
        </div>
        <div class="col-lg-5">{{input class="form-control" value=contactName}}</div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Contact Phone</span>
        </div>
        <div class="col-lg-3">{{input class="form-control" value=contactPhone}}</div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Contact Email</span>
        </div>
        <div class="col-lg-5">{{input class="form-control" value=contactMail}}</div>
    </div>

    <div class="row">
        <div class="col-lg-5">
            <span class="field-group">BankInfo</span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Account Number</span>
        </div>
        <div class="col-lg-4">{{input class="form-control" value=bankAccountNumber}}</div>

        <div class="col-lg-1">
            <span class="field pull-right">Name</span>
        </div>
        <div class="col-lg-3">{{input class="form-control" value=bankAccountName}}</div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Bank</span>
        </div>
        <div class="col-lg-4">
            <select class="form-control" onchange={{action "selectBank" value="target.value"}}>
              {{#each banks as |bankOption|}}
                  <option value={{bankOption.id}} selected={{eq bankId bankOption.id}}>{{bankOption.text}}</option>
              {{/each}}
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Branch</span>
        </div>
        <div class="col-lg-4">
          {{input class="form-control" value=bankBranch}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9 col-lg-offset-2">
            <button class="btn btn-success btn-sm" {{action "save"}}>
              {{fa-icon "check"}} &nbsp; Save
            </button>
            <button class="btn btn-danger btn-sm" {{action "cancel"}}>
              {{fa-icon "remove"}} &nbsp; Cancel
            </button>
        </div>
    </div>
</div>