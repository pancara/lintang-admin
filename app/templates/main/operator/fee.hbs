<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <p class="description">Set Operator Fee</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
          {{#if error}}
              <div class="alert alert-danger" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}

          {{#if success}}
              <div class="alert alert-success" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-1"><span class="field">Code</span></div>
        <div class="col-lg-2">
          {{operator.code}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1"><span class="field">Name</span></div>
        <div class="col-lg-2">
          {{operator.name}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1"><span class="field">Fee</span></div>
        <div class="col-lg-2">
          {{input class="form-control" value=fee}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9 col-lg-offset-1">
            <button class="btn btn-success btn-sm" {{action "save"}}>
              {{fa-icon "check"}} &nbsp; Save
            </button>
            <button class="btn btn-danger btn-sm" {{action "cancel"}}>
              {{fa-icon "remove"}} &nbsp; Cancel
            </button>
        </div>
    </div>
</div>