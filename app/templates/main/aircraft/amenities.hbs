{{pw-page-title title="Aircraft" subtitle="Amenities" icon="plane"}}
<div class="container-fluid">

  {{partial "main/aircraft/aircraft-detail"}}
    <div class="row">
        <div class="col-lg-8 col-lg-offset-4">
          {{#if selectingAmenity}}
              <button class="btn btn-xs pull-right" {{action "hideAmenityList"}} style="margin-bottom: 4px;">
                {{fa-icon "caret-up"}} &nbsp;
                  Hide Available Amenities
              </button>
          {{else}}
              <button class="btn btn-xs pull-right" {{action "showAmenityList" amenity}} style="margin-bottom: 4px;">
                {{fa-icon "caret-down"}} &nbsp;
                  Show Available Amenities
              </button>
          {{/if}}

          {{#if selectingAmenity}}
            {{pw-table data=amenitiesList
            headerTemplate="main/aircraft/amenities/header"
            footerTemplate="main/aircraft/amenities/footer"
            masterTemplate="main/aircraft/amenities/row"
            detailTemplate="main/aircraft/amenities/row-detail"
            isZebra=false
            isBordered =true
            addAmenity=(action "addAmenity")
            }}
            {{pw-paging register-as=paging refresh=(action "refresh")}}
          {{/if}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="pw-table pw-bordered">
                <thead>
                <tr>
                    <th colspan="6">Aircraft Amenities</th>
                </tr>
                <tr>
                    <th style="width: 10px;"></th>
                    <th style="width: 10px;"></th>
                    <th style="width: 40px;"></th>
                    <th>Name</th>
                    <th>Description</th>
                    <th style="width: 10px;"></th>
                </tr>
                </thead>
                <tbody>
                {{#each aircraft.amenities as |amenity index |}}
                    <tr>
                        <td>{{ add index 1 }}.</td>
                        <td>
                          {{#if (eq amenity.status "ACTIVE")}}
                              <span class="pw-label pw-label-success pw-label-xs">A</span>
                          {{else}}
                              <span class="pw-label pw-label-danger pw-label-xs">I&nbsp;</span>
                          {{/if}}
                        </td>
                        <td>{{amenity.logo}}</td>
                        <td>{{amenity.name}}</td>
                        <td>{{amenity.description}}</td>
                        <td>
                            <button class="btn btn-danger btn-xs" {{action "deleteAmenity" amenity}}>delete</button>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
                <tfoot>
                <tr>
                    <td></td>
                    <td colspan="5">
                        <span class="pw-label pw-label-success pw-label-xs">Active</span>
                        <span class="pw-label pw-label-danger pw-label-xs">Inactive</span>
                    </td>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>

</div>