<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
          {{#if error}}
              <div class="alert alert-danger" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}

          {{#if success}}
              <div class="alert alert-success" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Operator</span></div>
        <div class="col-lg-5">
          {{operator.code}} {{operator.name}}
          {{#if (not searchMode)}}
              <button class="btn btn-primary btn-xs" {{action "searchOperator" true}}>Select Operator</button>
          {{/if}}
        </div>
    </div>

  {{#if searchMode}}
      <div class="row">
          <div class="col-lg-10 col-lg-offset-2">
              <button class="btn btn-xs pull-right" {{action "searchOperator" false}}>
                {{fa-icon "remove"}}
              </button>

              <div class="form-inline" style="margin-bottom: 5px;">
                  <div class="form-group">
                    {{input class="form-control" value=keyword placeholder="Code"}}
                      &nbsp;
                      <button class="btn btn-sm pull-right" {{action "doSearchOperator"}}>Search</button>
                  </div>
              </div>
              <div>
                {{pw-table data=data
                headerTemplate="search-operator/header"
                footerTemplate="search-operator/footer"
                masterTemplate="search-operator/row"
                detailTemplate="search-operator/row-detail"
                isZebra=false
                selectOperator=(action "selectOperator")
                }}
              </div>
              <div>
                {{pw-paging register-as=paging refresh=(action "refreshOperators")}}
              </div>
          </div>
      </div>
  {{/if}}

    <div class="row">
        <div class="col-lg-2"><span class="field">Model</span></div>
        <div class="col-lg-3">
          {{input class="form-control" value=model}}
        </div>

        <div class="col-lg-2"><span class="field">Registration Number</span></div>
        <div class="col-lg-3">
          {{input class="form-control" value=registrationNumber}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Type</span>
        </div>
        <div class="col-lg-3">
            <select class="form-control" onchange={{action "selectType" value="target.value"}}>
                <option>-</option>
              {{#each aircraftTypes as |typeOption|}}
                  <option value={{typeOption}} selected={{eq type typeOption}}>{{typeOption}}</option>
              {{/each}}
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Safety Rating</span></div>
        <div class="col-lg-5">
          {{input class="form-control" value=safetyRating}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Description</span></div>
        <div class="col-lg-5">
          {{textarea class="form-control" value=description}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2"><span class="field">Year of Make</span></div>
        <div class="col-lg-5">
          {{input class="form-control" value=yearOfMake}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Speed Kts</span></div>
        <div class="col-lg-2">
          {{input class="form-control" value=speedKts}}
        </div>

        <div class="col-lg-2"><span class="field">Speed Kmh</span></div>
        <div class="col-lg-2">
          {{input class="form-control" value=speedKmh}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Max Range in Km</span></div>
        <div class="col-lg-2">
          {{input class="form-control" value=maxRangeKm}}
        </div>

        <div class="col-lg-2"><span class="field">Max Range in Nm</span></div>
        <div class="col-lg-2">
          {{input class="form-control" value=maxRangeKm}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Base Price</span></div>
        <div class="col-lg-2">
          {{input class="form-control" value=basePrice}}
        </div>

        <div class="col-lg-2"><span class="field">Margin Price</span></div>
        <div class="col-lg-2">
          {{input class="form-control" value=marginPrice}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Status</span></div>
        <div class="col-lg-2">
            <select class="form-control" onchange={{action "selectStatus" value="target.value"}}>
              {{#each aircraftStatuses as |statusOption|}}
                  <option value={{statusOption}} selected={{eq status statusOption}}>{{statusOption}}</option>
              {{/each}}
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2"><span class="field">Base Airport</span></div>
        <div class="col-lg-5">
          {{airport.code}} {{airport.name}}
          {{#if (not searchMode)}}
              <button class="btn btn-primary btn-xs" {{action "searchAirport" true}}>Select Airport</button>
          {{/if}}
        </div>
    </div>

  {{#if searchMode}}
      <div class="row">
          <div class="col-lg-10 col-lg-offset-2">
              <button class="btn btn-xs pull-right" {{action "searchAirport" false}}>
                {{fa-icon "remove"}}
              </button>

              <div class="form-inline" style="margin-bottom: 5px;">
                  <div class="form-group">
                    {{input class="form-control" value=keyword placeholder="Code"}}
                      &nbsp;
                      <button class="btn btn-sm pull-right" {{action "doSearchAirport"}}>Search</button>
                  </div>
              </div>

              <div>
                {{pw-table data=data
                headerTemplate="search-airport/header"
                footerTemplate="search-airport/footer"
                masterTemplate="search-airport/row"
                detailTemplate="search-airport/row-detail"
                isZebra=false
                selectOperator=(action "selectAirport")
                }}
              </div>

              <div>
                {{pw-paging register-as=paging refresh=(action "refreshAirport")}}
              </div>
          </div>
      </div>
  {{/if}}


    <div class="row">
        <div class="col-lg-9 col-lg-offset-2">
            <button class="btn btn-success btn-sm" {{action "save"}}>
              {{fa-icon "check"}} &nbsp; Save
            </button>
            <button class="btn btn-danger btn-sm" {{action "cancel"}}>
              {{fa-icon "remove"}} &nbsp; Cancel
            </button>
        </div>
    </div>
</div>